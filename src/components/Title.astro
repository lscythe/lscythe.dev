---
import titleBorder from "../assets/images/title-border.webp";
import pattern from "../assets/images/pattern.webp";

const titleBorderUrl = `url(${titleBorder.src})`;
const patternUrl = `url(${pattern.src})`;

const { title } = Astro.props;
---

<div class="title">
    <div class="title-container">
        <h2>{title}</h2>
    </div>
</div>

<style define:vars={{ titleBorderUrl, patternUrl }}>
    .title {
        position: relative;
        width: auto;
    }

    .title-container {
        display: flex;
        position: relative;
        justify-content: center;
        align-items: center;
        max-height: 100px;
        padding: 0 12rem;

        background: var(--titleBorderUrl);
        background-position: center;
        background-repeat: no-repeat;
        background-size: 100%;
    }

    .title-container::before {
        content: "";
        position: absolute;
        inset: 0;
        pointer-events: none;

        background: var(--main-gradient-bg);
    }

    .title-container > * {
        position: relative;
        z-index: 1;
    }

    .title h2 {
        font-size: 2rem;
    }
</style>
