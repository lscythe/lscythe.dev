---
import background from "../assets/images/root-bg.webp";
import border from "../assets/images/border.webp";
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";

const { ...props } = Astro.props;

const backgroundUrl = `url(${background.src})`;
const borderUrl = `url(${border.src})`;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <Head />
    </head>
    <body>
        <div class="body-container">
            <slot />
        </div>
        <Footer />
    </body>
</html>

<style define:vars={{ backgroundUrl, borderUrl }}>
    html {
        scroll-behavior: smooth;
    }

    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        min-height: 100%;
        overflow-x: hidden;
        overscroll-behavior: contain;
    }

    body {
        background:
            linear-gradient(
                to bottom,
                rgba(61, 20, 0, 0.35) 0%,
                rgba(61, 20, 0, 0.85) 100%
            ),
            var(--backgroundUrl);
    }

    .body-container {
        max-width: 1920px;
        margin: 0 auto;
        height: 100%;
    }
</style>
