---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";

import notFound from "../assets/images/404.webp";

const notFoundUrl = `url(${notFound.src})`;
---

<MainLayout showFooter={false}>
    <div class="container">
        <div class="content">
            <h1>404 - The Path Is Lost</h1>
            <h3>
                Alas, noble traveler, the scroll you seek has vanished from this
                realm.
            </h3>
            <Button label="Return to Royal Court" link="/" />
        </div>
    </div>
</MainLayout>

<style define:vars={{ notFoundUrl }}>
    .container {
        width: 100%;
        height: 100vh;

        background:
            linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.89) 0%,
                rgba(0, 0, 0, 1) 100%
            ),
            var(--notFoundUrl) center/cover no-repeat;

        position: relative;
    }

    .content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100%;

        padding: 0 10rem;
    }

    .content h3 {
        font-family: "Cormorant Garamond", serif;
        font-size: 2rem;
        margin-top: 0;
        margin-bottom: 4rem;
    }
</style>
